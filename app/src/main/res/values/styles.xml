<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <!-- Application specific style -->

    <style name="AppTheme.ConnectionInfoContainer">
        <item name="android:background">#333333</item>
    </style>
    <style name="AppTheme.ConnectionInfoText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:background">#47000000</item>
    </style>

    <!--<style name="AppTheme" parent="carbon_Theme.Light.NoActionBar"/>-->
</resources>
