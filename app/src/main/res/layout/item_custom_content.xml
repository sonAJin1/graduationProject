<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable name="customContentItem" type="com.example.sonaj.graduationproject.ItemWeekHotMovie"/>
    </data>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_custom_content"
            android:layout_width="252dp"
            android:layout_height="252dp"
            app:imageUrl="@{customContentItem.getimageUrl}"
            />

        <TextView
            android:id="@+id/tv_custom_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{customContentItem.getTitle}"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_sub_title"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ToggleButton
                android:id="@+id/btn_custom_content_like"
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:layout_centerInParent="true"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/like_selector"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/tv_custom_content_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(customContentItem.getLikeCount)}"
                android:textSize="@dimen/layout_sub_title"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </LinearLayout>
</layout>